        </div>

        <div class="form-group">
            <label asp-for="oBudgetBook.ActivityCodeID" class="control-label"></label>
            <select id="ddlActivityCode" asp-for="oBudgetBook.ActivityCodeID" class="form-control" asp-items="ViewBag.ActivityCode">
                <option>Please select...</option>
            </select>
        </div>

    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="oBudgetBook.DirectAllocated" class="control-label"></label>

            <select id="ddlDirectAllocated" asp-for="oBudgetBook.DirectAllocated" class="form-control" asp-items="ViewBag.DirectAllocated">
                <option>Please select...</option>
            </select>

            @*<input asp-for="DirectAllocated" class="form-control" />*@
            <span asp-validation-for="oBudgetBook.DirectAllocated" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="oBudgetBook.UapRollUpCodeID" class="control-label"></label>
            <select asp-for="oBudgetBook.UapRollUpCodeID" class="form-control" asp-items="ViewBag.UapRollUpCodeID">
                <option>Please select...</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="oBudgetBook.wbsID" class="control-label"></label>
            <select id="ddlWBS" asp-for="oBudgetBook.wbsID" class="form-control" asp-items="ViewBag.WBS">
                <option>Please select...</option>
            </select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="oBudgetBook.ContractID" class="control-label"></label>
            <select id="ddlContract" asp-for="oBudgetBook.ContractID" class="form-control" asp-items="ViewBag.Contract">
                <option>Please select...</option>
            </select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="oBudgetBook.ScopeID" class="control-label"></label>
            <select id="ddlScope" asp-for="oBudgetBook.ScopeID" class="form-control" asp-items="ViewBag.Scopes">
                <option>Please select...</option>
            </select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="oBudgetBook.BudgetBasisID" class="control-label"></label>
            <select id="ddlBudgetBasis" asp-for="oBudgetBook.BudgetBasisID" class="form-control" asp-items="@ViewBag.BudgetBasis">
                <option>Please select...</option>
            </select>
        </div>
    </div>
</div>

<hr />
<div class="row">

    <div class="col-md-4">

        <div class="form-group">
            <label asp-for="oBudgetBook.NAPIMSBUDGETFDollar" class="control-label"></label>
            <input asp-for="oBudgetBook.NAPIMSBUDGETFDollar" class="form-control" />
            <span asp-validation-for="oBudgetBook.NAPIMSBUDGETFDollar" class="text-danger"></span>
        </div>
