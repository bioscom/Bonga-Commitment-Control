<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="oBudgetBook.ActivityTypeID" class="control-label"></label>
            <select id="ddlActivityName" asp-for="oBudgetBook.ActivityTypeID" class="form-control" asp-items="ViewBag.ActivityName">
                <option>Select Activity</option>
            </select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="oBudgetBook.ActivityID" class="control-label"></label>
            <select id="ddlActivity" asp-for="oBudgetBook.ActivityID" class="form-control" asp-items="ViewBag.Activity">
                <option>Please select...</option>
            </select>

        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-6">
