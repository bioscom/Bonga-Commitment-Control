@model Web.BongaCC.ViewModels.CommitmentControlViewModel

<div id="add-commitment" class="col-md-12">
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingOne">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <i class="more-less glyphicon glyphicon-plus"></i>
                        <b>@Html.DisplayFor(model => model.oBudgetBook.Activity)</b>
                    </a>
                </h4>
            </div>
            <div id="collapseOne" class="panel-collapse" role="tabpanel" aria-labelledby="headingOne">
                <div class="panel-body">
                    @await Html.PartialAsync("_AddCommitmentOriginal")
                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingTwo">
                <h4 class="panel-title">
                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        <i class="more-less glyphicon glyphicon-plus"></i>
                        Budget Book Item
                    </a>
                </h4>
            </div>
            <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                <div class="panel-body">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <b>@Html.DisplayFor(model => model.oBudgetBook.Activity)</b>
                        </div>
                        <input type="hidden" asp-for="@Model.oBudgetBook.ID" />
                        <div class="panel-body" style="overflow:auto">
                            @await Html.PartialAsync("_CCBBDetails")
                        </div>
                    </div>
                </div>
            </div>
        </div>

