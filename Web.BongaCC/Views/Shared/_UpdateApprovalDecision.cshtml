@model Web.BongaCC.ViewModels.ApprovalDecisionsViewModel

<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Decision" class="control-label"></label>
            </div>
            <div class="col-md-9">
                <input asp-for="Decision" class="form-control" />
            </div>
            <span asp-validation-for="Decision" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="ColorCode" class="control-label"></label>
            </div>
            <div class="col-md-9">
                <input asp-for="ColorCode" class="form-control" />
            </div>
            <span asp-validation-for="ColorCode" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="ID" />
    </div>
</div>