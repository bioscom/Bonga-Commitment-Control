<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-1">
                <b style="color:darkgreen">Total Capex:</b>
            </div>
            <div class="col-md-3">
                <b style="color:darkgreen">@ViewBag.Capex</b>
            </div>

            <div class="col-md-1">
                <b style="color:darkgreen">Capex Spent:</b>
            </div>
            <div class="col-md-3">
                <b style="color: darkgreen">@ViewBag.CapexExp</b>
            </div>

            <div class="col-md-1">
                <b style="color:darkgreen">Capex Bal.:</b>
            </div>
            <div class="col-md-3">
                <b style="color:darkgreen">@ViewBag.CapexBal</b>
            </div>
        </div>

        <div class="row">
            <div class="col-md-1">
                <b style="color:darkred">Total Opex:</b>
            </div>
            <div class="col-md-3">
                <b style="color:darkred">@ViewBag.Opex</b>
            </div>

            <div class="col-md-1">
                <b style="color:darkred">Opex Spent:</b>
            </div>
            <div class="col-md-3">
                <b style="color:darkred">@ViewBag.OpexExp</b>
            </div>

            <div class="col-md-1">
                <b style="color:darkred">Opex Bal.:</b>
            </div>
            <div class="col-md-3">
                <b style="color:darkred">@ViewBag.OpexBal</b>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <b style="color:darkred">=====================================================================================================================================</b>
            </div>
        </div>

        <div class="row">
            <div class="col-md-1">
                <b style="color:darkred">Total:</b>
            </div>
            <div class="col-md-3">
                <b style="color:darkred">@ViewBag.TotalCapexOpex</b>
            </div>

            <div class="col-md-1">
                @*<b style="color:darkred">Total Spent:</b>*@
            </div>
            <div class="col-md-3">
                <b style="color:darkred">@ViewBag.TotalCapexOpexExp</b>
            </div>

            <div class="col-md-1">
                @*<b style="color:darkred">Total Bal.:</b>*@
            </div>
            <div class="col-md-3">
                <b style="color:darkred">@ViewBag.TotalCapexOpexBal</b>
            </div>
        </div>
    </div>
</div>
