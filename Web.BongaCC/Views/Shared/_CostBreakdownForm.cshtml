@model Web.BongaCC.ViewModels.CommitmentControlViewModel

    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CostBreakdown.Description" class="control-label"></label>
                <textarea asp-for="CostBreakdown.Description" class="form-control" rows="3" cols="80"></textarea>
                <span asp-validation-for="CostBreakdown.Description" class="text-danger"></span>
            </div>
        </div>
        <input type="hidden" asp-for="CostBreakdown.ID" />
        <input type="hidden" asp-for="CostBreakdown.BudgetBookCommitmentsID" />
    </div>

    <div id="floatingExRate" class="row">
        <div class="col-md-3 form-group">
            <label asp-for="CostBreakdown.CurrenciesID" class="control-label"></label>
            <select id="ddlCurrency" asp-for="CostBreakdown.CurrenciesID" class="form-control" asp-items='@(new SelectList(@ViewBag.Currency, "ID", "CurrencyName"))'></select>
            <span asp-validation-for="CostBreakdown.CurrenciesID" class="text-danger"></span>
        </div>
        <div class="col-md-3 form-group">
            <label asp-for="CostBreakdown.Quantity" class="control-label"></label>
            <input asp-for="CostBreakdown.Quantity" onkeydown="return isNumberKey(event, this)" class="form-control" />
            <span asp-validation-for="CostBreakdown.Quantity" class="text-danger"></span>
        </div>
        <div class="col-md-3 form-group">
            <label asp-for="CostBreakdown.Rate" class="control-label"></label>
            <input asp-for="CostBreakdown.Rate" onkeydown="return isNumberKey(event, this)" class="form-control" />
            <span asp-validation-for="CostBreakdown.Rate" class="text-danger"></span>
        </div>
        <div id="HideShow2" class="col-md-3 form-group">
            <label asp-for="CostBreakdown.FixedExchangeRate" class="control-label"></label>(&#8358;)
            <input asp-for="CostBreakdown.FixedExchangeRate" class="form-control" />
            <span asp-validation-for="CostBreakdown.FixedExchangeRate" class="text-danger"></span>
        </div>
    </div>

    <div id="Instruction" class="row">
        <div class="col-md-12 form-group">
            <label class="control-label" style="color:red; font-style:italic">
                Note: Fixed exchange rate only to be used where contract specifies a fixed exchange rate for payment of service rendered or material delivered
            </label>
        </div>
    </div>


