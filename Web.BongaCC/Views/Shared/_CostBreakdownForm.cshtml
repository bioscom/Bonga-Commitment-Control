<script type="text/javascript">

    $(document).ready(function () {
        $('#HideShow2').hide();
        $('#Instruction').hide();

        var FixedExchangeRateColumn = $('#HideShow2');
        var CurrencyType = $('#ddlCurrency').text();
        if (CurrencyType.toUpperCase() == 'Naira'.toUpperCase()) {
            FixedExchangeRateColumn.show();
            $('#Instruction').show();
        }
        else {
            FixedExchangeRateColumn.hide();
            $('#Instruction').hide();
        }


        $('#ddlCurrency').change(function (event) {
            var FixedExchangeRateColumn = $('#HideShow2');
            //var IdCurrency = $(this).children("option:selected").val();
            var CurrencyType = $(this).children("option:selected").text();

            if (CurrencyType.toUpperCase() == 'Naira'.toUpperCase()) {
                FixedExchangeRateColumn.show();
                $('#Instruction').show();
            }
            else {
                FixedExchangeRateColumn.hide();
                $('#Instruction').hide();
            }
        });
    });

</script>

