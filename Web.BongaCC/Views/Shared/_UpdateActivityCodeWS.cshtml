@model Web.BongaCC.ViewModels.ActivityCodeWorkStreamViewModel

<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="WorkStream" class="control-label"></label>
            <input asp-for="WorkStream" class="form-control" />
            <span asp-validation-for="WorkStream" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="WorkStreamDesc" class="control-label"></label>
            <input asp-for="WorkStreamDesc" class="form-control" />
            <span asp-validation-for="WorkStreamDesc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="WorkFlowType" class="control-label"></label>
            <select asp-for="WorkFlowType" asp-items="ViewBag.WorkFlowType" class="form-control">
                <option disabled selected>--- Select Workflow Type ---</option>
            </select>            
        </div>

        <input type="hidden" asp-for="ID" />
    </div>
</div>