<script type="text/javascript">

    $(document).ready(function () {
        $("#ScopesTbl").DataTable({
            "aLengthMenu": [[25, 50, 75, -1], [25, 50, 75, "All"]],
            "iDisplayLength": 25,

            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
                "url": "/Scopes/LoadData",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs":
                [{
                    //"targets": [4, 5, 6], "className": "right",
                    //"render": $.fn.dataTable.render.number(',', '.', 2),
                    //"visible": false,
                    "searchable": false
                }],
            "columns": [
                {
                    "data": "id",
                    render: function (data, type, row, meta) { return meta.row + meta.settings._iDisplayStart + 1; },
                    "autoWidth": true
                },
                { "data": "Purpose", "name": "Purpose", "autoWidth": true },
                {
                    "render": function (data, type, full, meta) {
                        return "<a href='#' class='btn-link btn-primary' onclick=editRow('" + full.ID + "');>Edit</a>";
                    }
                },
                {
                    data: null, render: function (data, type, row) {
                        return "<a href='#' class='btn-link btn-primary' onclick=DeleteData('" + row.ID + "');>Delete</a>";
                    }
                },
            ]
        });
    });

    function editRow(Id) {
        var mymodal = $("#editModal");
        $.ajax({
            url: '/Scopes/Edit/' + Id, // The method name + paramater
            success: function (data) {
                $('#editModalWrapper').html(data); // This should be an empty div where you can inject your new html (the partial view)
                mymodal.modal("show");
            }
        });
    }

    function DeleteData(CustomerID) {
        if (confirm("Are you sure you want to delete ...?")) {
            Delete(CustomerID);
        }
        else {
            return false;
        }
    }

    function Delete(Id) {
        var url = "/Scopes/Delete";
        $.post(url, { ID: Id }, function (data) {
            if (data) {
                oTable = $('#ScopesTbl').DataTable();
                oTable.draw();
            }
            else {
                alert("Something Went Wrong!");
            }
        });
    }

</script>